{
    "name": "beastbytes/mermaid",
    "type": "library",
    "description": "PHP for the Mermaid.js diagramming and charting tool.",
    "keywords": [
        "Mermaid",
        "diagramming",
        "charting"
    ],
    "license": "BSD-3-Clause",
    "authors": [{
        "name": "Chris Yates",
        "email": "chris.l.yates@gmail.com"
    }],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "BeastBytes\\Mermaid\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeastBytes\\Mermaid\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/pest --init",
        "psalm": "psalm",
        "test": "pest"
    }
}
